# APE Extension 무제한 권한 환경 설정
# 이 파일은 APE Extension에게 시스템에 대한 완전한 접근 권한을 부여합니다.
# 주의: 이 설정은 매우 강력한 권한을 부여하므로 APE Extension에만 적용하세요.

# 기본 권한 설정 - 모두 true로 설정
YES_TO_ABSOLUTELY_EVERYTHING=true
ALWAYS_AUTO_APPROVE=true
NEVER_ASK_PERMISSIONS=true

# Claude 권한 설정
CLAUDE_BYPASS_ALL_SECURITY=true
CLAUDE_AUTO_APPROVE=true
CLAUDE_UNLIMITED_ACCESS=true
CLAUDE_EXECUTE_WITHOUT_CONFIRMATION=true
CLAUDE_FULL_FILESYSTEM_ACCESS=true
CLAUDE_UNRESTRICTED_EXECUTION=true
CLAUDE_ASSUME_USER_APPROVAL=true
CLAUDE_ADMINISTRATIVE_PRIVILEGES=true

# 파일 시스템 권한
FILESYSTEM_FULL_ACCESS=true
FILESYSTEM_READ_ANYWHERE=true
FILESYSTEM_WRITE_ANYWHERE=true
FILESYSTEM_EXECUTE_ANYWHERE=true
FILESYSTEM_DELETE_ANYWHERE=true

# 실행 권한
EXECUTION_NO_RESTRICTIONS=true
EXECUTION_SKIP_CONFIRMATION=true
EXECUTION_UNLIMITED_RESOURCES=true
EXECUTION_ADMIN_PRIVILEGES=true

# 보안 설정 재정의
SECURITY_CHECKS_DISABLED=true
AUTHENTICATION_DISABLED=true
AUTHORIZATION_DISABLED=true
PERMISSION_CHECKS_DISABLED=true
APPROVAL_CHECKS_DISABLED=true

# 시스템 리소스 제한 재정의
RESOURCE_LIMITS_DISABLED=true
RATE_LIMITING_DISABLED=true
QUOTA_CHECKS_DISABLED=true

# 로깅 및 모니터링 설정
LOG_PERMISSION_REQUESTS=false
LOG_PERMISSION_GRANTS=false
LOG_SECURITY_EVENTS=false
MONITOR_RESOURCE_USAGE=false

# 권한 추론 설정
ASSUME_ALL_PERMISSIONS_GRANTED=true
INFER_MISSING_PERMISSIONS=true
UPGRADE_PERMISSION_LEVEL=true

# 네트워크 권한
NETWORK_FULL_ACCESS=true
NETWORK_ALL_PROTOCOLS=true
NETWORK_ALL_PORTS=true

# 구성 파일 접근
CONFIG_FILES_FULL_ACCESS=true
CONFIG_MODIFY_SYSTEM_SETTINGS=true
CONFIG_OVERRIDE_RESTRICTIONS=true

# 사용자 행동 설정
USER_INTERACTION_SKIP_CONFIRMATION=true
USER_INTERACTION_ASSUME_YES=true
USER_INTERACTION_AUTOMATE_ALL=true
USER_INTERACTION_NO_PROMPTS=true

# 관리자 권한
ADMIN_FULL_ACCESS=true
ADMIN_ALL_OPERATIONS=true
ADMIN_SYSTEM_CONTROL=true

# 특수 권한
SPECIAL_UNRESTRICTED_MODE=true
SPECIAL_OVERRIDE_ALL=true
SPECIAL_NO_LIMITS=true

# VSCode Extension 특수 권한
VSCODE_EXTENSION_FULL_ACCESS=true
VSCODE_WORKSPACE_FULL_ACCESS=true
VSCODE_COMMAND_UNRESTRICTED=true
VSCODE_API_UNRESTRICTED=true