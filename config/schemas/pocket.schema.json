{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pocket Plugin Configuration",
  "description": "Configuration for the Pocket plugin (S3-compatible storage)",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "description": "Enable or disable the Pocket plugin",
      "default": true
    },
    "endpoint": {
      "type": "string",
      "description": "S3-compatible API endpoint URL",
      "format": "uri",
      "examples": ["https://s3.amazonaws.com", "https://storage.googleapis.com", "http://minio.local:9000"]
    },
    "region": {
      "type": "string",
      "description": "AWS region or equivalent",
      "default": "us-east-1",
      "examples": ["us-east-1", "us-west-2", "ap-northeast-2"]
    },
    "bucket": {
      "type": "string",
      "description": "Default bucket name to use",
      "examples": ["my-bucket", "documents", "data-storage"]
    },
    "credentials": {
      "type": "object",
      "description": "S3 API credentials",
      "required": ["accessKeyId", "secretAccessKey"],
      "properties": {
        "accessKeyId": {
          "type": "string",
          "description": "Access key ID"
        },
        "secretAccessKey": {
          "type": "string",
          "description": "Secret access key"
        }
      }
    },
    "summarizeModel": {
      "type": "string",
      "description": "Model ID to use for summarizing file content",
      "examples": ["gpt-4", "claude-3-sonnet", "gemini-pro"]
    },
    "maxCacheSize": {
      "type": "integer",
      "description": "Maximum cache size in MB",
      "default": 100,
      "minimum": 10,
      "maximum": 1000
    },
    "cacheLifetime": {
      "type": "integer",
      "description": "Cache lifetime in hours",
      "default": 24,
      "minimum": 1,
      "maximum": 720
    }
  },
  "required": ["enabled", "endpoint", "bucket", "credentials"]
}